@model IEnumerable<TrashCollection.Models.Address>

@{
    ViewBag.Title = "Your Current Addresses";
}

<h2>Your Current Addresses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Address")
             @*@Html.DisplayNameFor(model => model.Street1)*@
        </th>
        <th>
            @Html.Label("Apt/Suite")
            @*@Html.DisplayNameFor(model => model.Street2)*@
        </th>
        <th>
            @Html.Label("City")
            @*@Html.DisplayNameFor(model => model.City.CityName)*@
        </th>
        <th>
            @Html.Label("ZipCode")
            @*@Html.DisplayNameFor(model => model.Zipcode.ZipcodeName)*@
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Street1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Street2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City.CityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Zipcode.ZipcodeName)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AddressID }) |
            @Html.ActionLink("Schedule Pickups", "Index", "Pickups") |
           @* @Html.ActionLink("Details", "Details", new { id=item.AddressID }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.AddressID })
        </td>
    </tr>

}

</table>
<div>
    @Html.ActionLink("View your Pickup Schedule", "Index", "Pickups")
</div>

